<%- include('./partials/header', {
  title: 'App register',
  homeLink: '/',
  addPost: 'none',
  showSearch: 'none',
  userLink: '#',
  userImage: 'https://pbs.twimg.com/profile_images/1171786931/nota_icon_400x400.png',
  userName: 'Sign in',
  item1: 'Login',
  item2: 'Register',
  item3: 'Home',
  home: 'home page',
  link1: '/users/login',
  link2: '/users/register',
  link3: '/'    
}); %>


<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fa fa-sign-in" aria-hidden="true"></i> Register
      </h1>
      <%- include("./partials/messages"); %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            <i class="fa fa-sign-in" aria-hidden="true"></i> Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>


<% include ./partials/footer %>
