<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-3 space">
            <div class="m-2">
                <%if(typeof editImage != 'undefined'){%>
                <img src="<%= user.image %>" alt="me" width='60' height='60'
                    class="rounded-circle shadow-1-strong mr-3">
                <a href="#" onclick="toggleForm('editImage')">
                    <h6>Edit Image</h6>
                </a>
                <form id='editImage' style="display: none;" class="P-2 ml-auto m-1" action="/users/<%= user.id%>" method="POST">
                    <input type="hidden" name="_method" value="put">
                    <textarea id="image" name="image" class="form-control" rows="1" style="background: #fff;"
                        value="<%= typeof image != 'undefined' ? image : '' %>"><%= user.image %></textarea>
                    <label class="form-label text-muted small" for="textAreaExample">Image URL
                        here</label>
                    <button class="btn btn-info">Update Image</button>
                </form>
                <%}%>
                <h5 class="mt-3"><b>Links to other social media</b></h5>
                <p>Look at the below</p>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link " href="#">Twitter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Facebook</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">HTML</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#">Social Network</a>
                    </li>
                </ul>
            </div>
        </div>